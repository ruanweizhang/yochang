<features xmlns="http://karaf.apache.org/xmlns/features/v1.2.0" name="odl-controller-1.7.1-Boron-SR1" xsi:schemaLocation="http://karaf.apache.org/xmlns/features/v1.2.0 http://karaf.apache.org/xmlns/features/v1.2.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
